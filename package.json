{
  "name": "@ticketping/chat-widget",
  "version": "1.0.17",
  "description": "Customer support chat widget for Ticketping - Intercom-like experience with real-time messaging",
  "type": "module",
  "main": "./dist/widget.umd.js",
  "module": "./dist/widget.esm.js",
  "browser": "./dist/widget.min.js",
  "types": "./dist/types/widget.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/widget.d.ts",
      "browser": "./dist/widget.min.js",
      "import": "./dist/widget.esm.js",
      "require": "./dist/widget.umd.js",
      "default": "./dist/widget.min.js"
    },
    "./style": {
      "types": "./dist/types/style.d.ts",
      "default": "./dist/widget.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "npm run clean && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview --port 4173",
    "serve": "vite preview --port 8080 --host",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx --ignore-pattern '**/*.d.ts'",
    "lint:fix": "eslint src --ext .js,.ts,.jsx,.tsx --ignore-pattern '**/*.d.ts' --fix",
    "analyze": "echo 'Bundle analysis would run here'",
    "start": "npm run dev",
    "prepublishOnly": "npm run clean && npm run lint && npm run test:run && npm run build",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ticketping-com/chat-widget.git"
  },
  "author": "Ticketping Team <developers@ticketping.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ticketping-com/chat-widget/issues"
  },
  "homepage": "https://github.com/ticketping-com/chat-widget#readme",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.30.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^3.2.4"
  },
  "bundlesize": [
    {
      "path": "./dist/widget.min.js",
      "maxSize": "50kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/widget.css",
      "maxSize": "10kb",
      "compression": "gzip"
    }
  ],
  "keywords": [
    "chat-widget",
    "customer-support",
    "ticketping",
    "help-desk",
    "live-chat",
    "support-widget",
    "real-time",
    "javascript",
    "typescript"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ticketping"
  }
}
